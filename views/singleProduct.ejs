<div class="container my-5">
  <div class="row justify-content-center my-5">
    <div class="col-md-5">
      <a class="btn btn-sm btn-primary mb-3" href="/">Back</a>

      <div class="card">
        <div class="card-body">
          <div
            style="
              height: 300px;
              width: 300px;
              border-radius: 50%;
              border: 3px solid #ddd;
              margin: auto;
              overflow: hidden;
            "
          >
            <img
              style="width: 100%; height: 100%; object-fit: cover"
              src="/users/<%= singleUser.photo %>"
              alt=""
            />
          </div>

          <table class="table">
            <tr>
              <th scope="row">Name</th>
              <td><%= singleUser.f_name + " " + singleUser.l_name %></td>
            </tr>
            <tr>
              <th scope="row">Age</th>
              <td><%= singleUser.age %></td>
            </tr>
            <tr>
              <th scope="row">Address</th>
              <td><%= singleUser.address %></td>
            </tr>
            <tr>
              <th scope="row">Phone</th>
              <td><%= singleUser.phone %></td>
            </tr>
            <tr>
              <th scope="row">Email</th>
              <td><%= singleUser.email %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
